     * so 40 bytes total (determined by objectTypes slot 4)
     */
    pointer a = GC_arrayAllocate(&gcState, 0, 10, (0x4<<1) | 0x1); // 10 elements
    struct GC_UM_Array_Chunk *root = (struct GC_UM_Array_Chunk *)(a - 2*(sizeof(void *)));

